@model RegistrationModel
@{
    ViewData["Title"] = "Registration";
}


<h3>Registration Page</h3>
<br />
@{<b></b>
    if (TempData["msg"] != null)
    {
        <h5 style="color:red">@TempData["msg"]</h5>
    }
}
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name" required></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username" required></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" required></label>
                <input asp-for="Password" class="form-control" minlength="6" title="Minimum 6 characters"/>
                <span asp-validation-for="Password"  class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>